<%= form_with model: @recipe, url: recipe_path(@recipe), method: :patch do |form| %>
    <%= form.label :recipe_category %>
    <%= form.select :recipe_category_id, RecipeCategory.where(user_id: current_user.id).collect {|r| [r.name, r.id]},  {include_blank: false}, id: "recipe_category"%> <br/>

    <%= form.label :name %>
    <%= form.text_field :name %> <br/>

    <%= form.label :description %>
    <%= form.text_area :description%> <br/>
    
    <%= render 'miniform', form: form, ingredients: :ingredients %>
    <%= form.submit %>
<% end %>

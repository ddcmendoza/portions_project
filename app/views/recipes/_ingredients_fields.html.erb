<div class='nested-fields'>
  <div class='form-group card p-1 m-1 col-md-12' data-controller='fetch-price' data-fetch-price-url-value='<%= fetch_price_path %>'>
    <%= form.hidden_field :_destroy %>
    <%= form.hidden_field :_post, value: 0, data: {fetch_price_target: 'toPost'} %>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: 'Name', class: 'form-control', disabled: params[:action] == 'show' && params[:name],data: {fetch_price_target: 'name'} %>
    <%= form.label :brand %>
    <%= form.text_field :brand, placeholder: 'Optional', class: 'form-control', data: {fetch_price_target: 'brand'} %>
    <%= form.fields_for :ingredients_recipes_attributes do |f| %>
      <%= f.label :measurement %>
      <%= f.text_field :measurement, placeholder: 'e.g. grams, pieces,', class: 'form-control', value: ir_attr ? ir_attr.measurement : nil, data: {fetch_price_target: 'measurement'} %>
      <%= f.label :measurement_value %>
      <%= f.number_field :measurement_value, step: 0.1, class: 'form-control', value: ir_attr ? ir_attr.measurement_value : nil, data: {fetch_price_target: 'measurementValue'} %>
      <%= f.label :price %>
      <div class="d-flex flex-row">
      <%= f.number_field :price, step: 0.1, class: 'form-control', value: ir_attr ? ir_attr.price : nil, data: {fetch_price_target: 'price'} %>
      <span data-fetch-price-target="notification"></span>
      </div>
    <% end %>
    <small>
      <%= link_to "Remove", "#", method: :delete, data: { action: "click->nested-form#remove_association", confirm: "Are you sure?" } %>
      <%= link_to "Get Price", "#", data: {action: 'click->fetch-price#fetchPrice'}%>
    </small>
  </div>
</div>

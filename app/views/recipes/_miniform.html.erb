  <template data-nested-form-target='template'>
    <%= form.fields_for :ingredients, Ingredient.new, child_index: 'TEMPLATE_RECORD' do |ingredient| %>
      <%= render 'ingredients_fields', form: ingredient, ir_attr: nil%>
    <% end %>
  </template>
  <%= form.fields_for :ingredients do |ingredient| %>
    <%= render 'ingredients_fields', form: ingredient , ir_attr: IngredientsRecipe.find_entry(@recipe, ingredient.object)%>
  <% end %>
  <div data-nested-form-target="add_item" class=" text-center">
    <%= link_to "Add Ingredient", "#", data: { action: "nested-form#add_association" } %>
  </div>
</div>